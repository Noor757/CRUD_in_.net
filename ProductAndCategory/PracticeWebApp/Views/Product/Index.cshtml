@model List<Product>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th> Product Name </th>
            <th> Id </th>
            <th> Description </th>
            <th> Price </th>
            <th> Associated Category No</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="10%">
                    @obj.Name
                </td>
                <td width="10%">
                    @obj.Id
                </td>
                <td width="10%">
                    @obj.Description
                </td>
                <td width="10%">
                    @obj.Price
                </td>
                <td width="15%">
                @foreach (int categoryId in obj.CategoryIds)
                {
                        @categoryId
                        if (categoryId != obj.CategoryIds.Last())
                        {
                            <span>, </span>
                        }
                    
                }
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> &nbsp;  Edit
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i> &nbsp;  Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
